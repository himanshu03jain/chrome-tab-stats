{
  "name": "Tab stats",
  "version": "1.0",
  "description": "A simple tab statistics tracker for Chrome.",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Tab Stats",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs"
  ]
}
